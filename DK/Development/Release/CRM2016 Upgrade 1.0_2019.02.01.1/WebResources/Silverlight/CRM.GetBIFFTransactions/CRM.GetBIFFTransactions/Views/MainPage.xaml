                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="4" Foreground="Black" Text="{Binding Path=RecType, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="5" Foreground="Black" Text="{Binding Path=TxnType, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="6" Foreground="Black" Text="{Binding Path=Amount, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="7" Foreground="Black" Text="{Binding Path=OrigZoneName, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="8" Foreground="Black" Text="{Binding Path=Route, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="9" Foreground="Black" Text="{Binding Path=DeviceID, Mode=TwoWay}" Margin="10,0,0,0" />
                            <Image HorizontalAlignment="Right" Height="12" Width="12" Grid.Column="10" Source="/CRM.GetBIFFTransactions;component/Images/Delete_16.png" Stretch="UniformToFill" />
                            <Button Cursor="Hand" HorizontalAlignment="Right" Height="23" Width="23" Grid.Column="10" Margin="1,0,0,0" Style="{StaticResource DeleteButton}" Command="{Binding Path=CommandDelete}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <cgi:CRMBusyIndicator Grid.Column="0" Grid.Row="2" ShowContent="Vänta..." IsWaiting="{Binding Path=IsWaiting, Mode=TwoWay, FallbackValue=false}" Height="0" Margin="1000,210,1000,40" Width="0" />

        </Grid>

        <Grid x:Name="NewLoadingRoot" Visibility="Collapsed" Grid.RowSpan="2">
            <TextBlock Text="Spara ärendet innan du använder söka kortdetaljer!" />
        </Grid>

    </Grid>

</UserControl>
