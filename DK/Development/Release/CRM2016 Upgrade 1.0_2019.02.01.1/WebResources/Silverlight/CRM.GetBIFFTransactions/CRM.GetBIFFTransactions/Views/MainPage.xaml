                        <TextBlock x:Name="lblPeriodCardInformation" Text="PeriodCardInformation" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />

                        <!--<TextBlock x:Name="lblPeriodCardCategory" Text="PeriodCardCategory:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                    <TextBlock Text="{Binding Path=PeriodCardCategory, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />-->

                        <TextBlock x:Name="lblPeriodProductType" Text="PeriodProductType:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=PeriodProductType, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                        <TextBlock x:Name="lblPeriodPeriodStart" Text="PeriodPeriodStart:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=GetStartDate, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                        <TextBlock x:Name="lblPeriodPeriodEnd" Text="PeriodPeriodEnd:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=GetEndDate, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                        <TextBlock x:Name="lblPeriodPricePaid" Text="PeriodPricePaid:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=GetPeriodPricePaid, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                        <TextBlock x:Name="lblPeriodWaitingPeriods" Text="PeriodWaitingPeriods:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=PeriodWaitingPeriods, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                        <TextBlock x:Name="lblPeriodOutstandingEnableThresholdAutoload" Text="PeriodOutstandingEnableThresholdAutoload:" FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Margin="10,0,0,0" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=PeriodOutstandingEnableThresholdAutoload, Mode=TwoWay, FallbackValue=' '}"  FontFamily="Portable User Interface" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,1,0,0" />

                    </StackPanel>

                    <Grid x:Name="ZoneViewer" Grid.Row="1" Grid.Column="4">
                        <TextBlock x:Name="lblZoneList" Text="ZoneList" Grid.Row="1" Grid.Column="3" Margin="5,0,0,5" FontFamily="Portable User Interface" FontSize="12" FontWeight="Bold" />
                        <ListBox x:Name="lstZones" ItemsSource="{Binding Path=ZoneList, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="5,20,5,5" BorderBrush="Black"
                    ItemContainerStyle="{StaticResource ListBoxItemStyleWhite}" Visibility="Visible">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10*" />
                                            <ColumnDefinition Width="90*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="0" Foreground="Black" Text="{Binding Path=Zone, Mode=TwoWay}" Margin="10,0,0,0" FontSize="12" />
                                        <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="1" Foreground="Black" Text="{Binding Path=ZoneCaption, Mode=TwoWay}" Margin="10,0,0,0" FontSize="12" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid x:Name="RouteViewer" Grid.Row="1" Grid.Column="5">
                        <TextBlock x:Name="lblRouteList" Text="RouteList" Grid.Row="1" Grid.Column="3" Margin="5,0,0,5" FontFamily="Portable User Interface" FontSize="12" FontWeight="Bold" />
                        <ListBox x:Name="lstRoutes" ItemsSource="{Binding Path=RouteList, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Height="Auto" Margin="5,20,5,5" BorderBrush="Black"
                    ItemContainerStyle="{StaticResource ListBoxItemStyleWhite}" Visibility="Visible">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10*" />
                                            <ColumnDefinition Width="90*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="0" Foreground="Black" Text="{Binding Path=Route, Mode=TwoWay}" Margin="10,0,0,0" />
                                        <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="1" Foreground="Black" Text="{Binding Path=RouteCaption, Mode=TwoWay}" Margin="10,0,0,0" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
                <TextBlock x:Name="lblSearchTransactionsFrom" Text="Search from:" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Portable User Interface" FontSize="12" Margin="10,13,0,0" FontWeight="Bold" />
                <TextBox x:Name="txtSearchTransactionsFrom" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Portable User Interface" FontSize="12" Margin="10,9,0,0" TabIndex="2" />
                <TextBlock x:Name="lblSearchTransactionsTo" Text="Search to:" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Portable User Interface" FontSize="12" Margin="10,13,0,0" FontWeight="Bold" />
                <TextBox x:Name="txtSearchTransactionsTo" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Portable User Interface" FontSize="12" Margin="10,9,0,0" TabIndex="3" />
                <Border x:Name="btnSearchCardTransactionsBorder" Width="50" Height="23" Margin="2,9,0,0" VerticalAlignment="Top" Background="Transparent">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="" />
                    </ToolTipService.ToolTip>
                    <Button Command="{Binding Path=SearchTravelCardTransactionsCommand, Mode=TwoWay}" x:Name="btnSearchCardTransactions" Width="50" Height="23" Content="Sök" VerticalAlignment="Top" TabIndex="4" />
                </Border>
            </StackPanel>

            <sdk:DataGrid 
            x:Name="grdGridSearch"
            Grid.Column="0"
            Grid.Row="2"
            AutoGenerateColumns="False" 
            Width="auto" 
            Margin="10,50,10,0" 
            FontFamily="Portable User Interface" 
            FontSize="10" 
            Style="{StaticResource DataGridStyle}" 
            CanUserReorderColumns="False" 
            CanUserSortColumns="False"
            >
                <sdk:DataGrid.Columns>

                    <sdk:DataGridTemplateColumn Width="23" Header="" DisplayIndex="0">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="+" Style="{StaticResource MyButton}" FontFamily="Portable User Interface" FontSize="10" Command="{Binding Path=CommandAdd}" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="Transactiondate" DisplayIndex="1">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=GetDate, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="Transactiontime" DisplayIndex="2">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=GetTime, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="CardSect" DisplayIndex="3">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=CardSect, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="RecType" DisplayIndex="4">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=RecType, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="TxnType" DisplayIndex="5">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=TxnType, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="Balance" Visibility="Collapsed" DisplayIndex="6">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding Path=Balance, Mode=TwoWay, Converter={ StaticResource decimalConverter}}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="Amount" DisplayIndex="7">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding Path=Amount, Mode=TwoWay, Converter={ StaticResource decimalConverter}}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="OrigZone" DisplayIndex="8">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=OrigZoneName, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="DestZone" Visibility="Collapsed" DisplayIndex="9">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=DestZonName, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="Route" DisplayIndex="10">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Route, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>

                    <sdk:DataGridTemplateColumn Width="120" Header="DeviceID" DisplayIndex="11">
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=DeviceID, Mode=TwoWay}" FontFamily="Portable User Interface" FontSize="10" />
                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>
                    </sdk:DataGridTemplateColumn>


                </sdk:DataGrid.Columns>
            </sdk:DataGrid>

            <ListBox x:Name="lstSelection" 
                 Grid.Column="0" 
                 Grid.Row="3"
                 BorderBrush="Black"
                 ItemContainerStyle="{StaticResource ListBoxItemStyleWhite}"
                 Margin="10"
                 >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="0" Foreground="Black" Text="{Binding Path=TravelCard, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="1" Foreground="Black" Text="{Binding Path=GetDate, Mode=TwoWay}" Margin="10,0,0,0" />
                            <TextBlock HorizontalAlignment="Left" Height="23" Width="Auto" Grid.Column="2" Foreground="Black" Text="{Binding Path=GetTime, Mode=TwoWay}" Margin="10,0,0,0" />
