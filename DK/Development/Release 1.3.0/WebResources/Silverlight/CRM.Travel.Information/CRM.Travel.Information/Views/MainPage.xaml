        <Style x:Key="ToggleButtonStyle_3" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF1F3B53"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">

                                    </VisualState>
                                    <VisualState x:Name="Pressed">

                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_image"/>
                                            <DoubleAnimation AutoReverse="False" Duration="00:00:00" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_preferences_image"/>
                                            <DoubleAnimation BeginTime="00:00:00.5" Duration="00:00:00.5" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_delete_image"/>
                                            <ObjectAnimationUsingKeyFrames BeginTime="00:00:01" Duration="00:00:00.0010000" Storyboard.TargetName="funnel_preferences_image" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_image"/>
                                            <DoubleAnimation Duration="0" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_delete_image"/>
                                            <DoubleAnimation Duration="0" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="funnel_preferences_image"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                    </VisualState>
                                    <VisualState x:Name="Unfocused"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Border x:Name="BorderPressed" BorderBrush="#FF6593cf" BorderThickness="1" Padding="2">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.509,0.111">
                                        <GradientStop Color="#FFB7D1F5" Offset="1"/>
                                        <GradientStop Color="White" Offset="0.063"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <Image x:Name="funnel_delete_image" Source="/Cinteros.CRM2011.ProductGrid;component/Images/clipboard_delete.png" Opacity="0" />
                                    <Image x:Name="funnel_preferences_image" Source="/Cinteros.CRM2011.ProductGrid;component/Images/clipboard_empty.png" Opacity="0"/>
                                    <Image x:Name="funnel_image" Source="/Cinteros.CRM2011.ProductGrid;component/Images/clipboard.png" Opacity="0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

