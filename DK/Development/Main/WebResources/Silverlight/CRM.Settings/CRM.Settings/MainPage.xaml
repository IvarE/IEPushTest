<UserControl x:Class="CRM.Settings.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot" Background="White" Loaded="LayoutRoot_Loaded">
        <Border BorderBrush="Black" BorderThickness=".5">
        <Grid>
            <TextBlock Text="Välkomen till Skånetrafikens nya ärende system." VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" FontFamily="Portable User Interface" FontSize="20" />
            <Button Height="23" Width="280" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Content="Ladda standarddata (Standard kund i ärende)" Click="Button_Click" />
            <TextBlock x:Name="lblVersion" Text="..." VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5,0,0,5" FontFamily="Portable User Interface" FontSize="12" />
        </Grid>
        </Border>
    </Grid>
</UserControl>
